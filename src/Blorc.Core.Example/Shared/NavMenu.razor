                    <NavigationItem Title="Dropdown" Link="components/dropdown" Parent="@ComponentsNavigationExpandableSection" />
                    <NavigationItem Title="Empty state" Link="components/empty-state" Parent="@ComponentsNavigationExpandableSection" />
