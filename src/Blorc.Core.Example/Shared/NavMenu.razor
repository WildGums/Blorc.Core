                <Content>
                    <i class="fa fa-home mr-3" aria-hidden="true"></i>  Home
                </Content>
            </NavigationItem>
            <NavigationExpandableSection Title="Components" Parent="@Navigation" ref="ComponentsNavigationExpandableSection">
                <Content>
                    <i class="fa fa-server mr-3" aria-hidden="true"></i> Components
                </Content>
                <Items>
                    <NavigationItem Title="About modal" Link="components/about-modal" Parent="@ComponentsNavigationExpandableSection" />
                    <NavigationItem Title="Accordion" Link="components/accordion" Parent="@ComponentsNavigationExpandableSection" />
                    <NavigationItem Title="Alert" Link="components/alert" Parent="@ComponentsNavigationExpandableSection" />
                    <NavigationItem Title="Application launcher" Link="components/application-launcher" Parent="@ComponentsNavigationExpandableSection" />
                    <NavigationItem Title="Avatar" Link="components/avatar" Parent="@ComponentsNavigationExpandableSection" />
                    <NavigationItem Title="Background image *" Link="components/background-image" Parent="@ComponentsNavigationExpandableSection" />
                    <NavigationItem Title="Badge" Link="components/badge" Parent="@ComponentsNavigationExpandableSection" />
                    <NavigationItem Title="Brand" Link="components/brand" Parent="@ComponentsNavigationExpandableSection" />
                    <NavigationItem Title="Breadcrumb" Link="components/breadcrumb" Parent="@ComponentsNavigationExpandableSection" />
                    <NavigationItem Title="Button" Link="components/button" Parent="@ComponentsNavigationExpandableSection" />
                    <NavigationItem Title="Card" Link="components/card" Parent="@ComponentsNavigationExpandableSection" />
                    <NavigationItem Title="Checkbox" Link="components/checkbox" Parent="@ComponentsNavigationExpandableSection" />
                    <NavigationItem Title="Chip group *" Link="components/chip-group" Parent="@ComponentsNavigationExpandableSection" />
