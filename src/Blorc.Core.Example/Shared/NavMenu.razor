                    <NavigationItem Title="Form select *" Link="components/form-select" Parent="@ComponentsNavigationExpandableSection" />
                    <NavigationItem Title="Icon" Link="components/icon" Parent="@ComponentsNavigationExpandableSection" />
                    <NavigationItem Title="Input group" Link="components/input-group" Parent="@ComponentsNavigationExpandableSection" />
                    <NavigationItem Title="Label" Link="components/label" Parent="@ComponentsNavigationExpandableSection" />
                    <NavigationItem Title="List" Link="components/list" Parent="@ComponentsNavigationExpandableSection" />
